{{#if pendientes.length}}
<header>
  <div class="container">
    <div class="box-title">
      <h1>{{title}}</h1>
    </div>
  </div>
</header>
<main>
  <div class="container">
    <div class="row">

      {{#each pendientes}}
      <div class="card">
        <div>
          <h2>Nombre:</h2>
          <p>{{nombre}}</p>
        </div>
        <div>
          <h2>Fecha:</h2>
          <p>{{fecha}}</p>
        </div>
        <div>
          <h2>Descripcion:</h2>
          <p>{{descripcion}}</p>
        </div>
        <div>
          <h2>Prioridad:</h2>
          <p>{{prioridad}}</p>
        </div>
      </div>
      {{/each}}

    </div>
  </div>
</main>
{{else}}
<header>
  <div class="container">
    <div class="box-title">
      <h1>{{title2}}</h1>
    </div>
  </div>
</header>
<main>
  <div class="row">
      <div class="imagen"></div>
  </div>
</main>
{{/if}}


















